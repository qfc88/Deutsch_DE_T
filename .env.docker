# Docker Environment Configuration for Job Scraper

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=job_market_data
DB_USER=postgres
DB_PASSWORD=working

# Application Environment
ENVIRONMENT=production
PYTHONPATH=/app/src

# Browser Settings for Docker
DISPLAY=:99
SCRAPER_HEADLESS=true

# Performance Settings
SCRAPER_BATCH_SIZE=50
MAX_JOBS_PER_SESSION=1000
DELAY_BETWEEN_JOBS=0.5

# Automation Settings
AUTOMATION_MODE=true
AUTO_SOLVE_CAPTCHA=true
ENABLE_RESUME=true

# File Management
USE_SESSIONS=true
AUTO_BACKUP=true

# Logging
LOGGING_LEVEL=INFO
ENABLE_FILE_LOGGING=true

# CAPTCHA API (replace with your actual key)
TWOCAPTCHA_API_KEY=5865b4e02e5bc91f671a60bc18fd75d1

# Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60

# Resource Management
MEMORY_THRESHOLD_MB=1500
ENABLE_PROFILING=false